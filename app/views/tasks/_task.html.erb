<!-- adding data-id attribute -->
<div class="panel panel-default" data-id="<%= task.id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= task.name %></h3>
  </div>
  <div class="panel-body">
    <p><%= truncate task.description, length: 50 %></p>
    <% if task.due_on %>
      <p id="complete-by">Complete by: <%= task.due_on %></p>
    <% end %>
    <p>Status: <%= task.completed ? "Complete":"Incomplete"%></p>
  </div>
  <div class="btn">
    <button type="button" id="done-button" data-loading-text="Completed!" class="btn btn-primary" autocomplete="off">
    <%= task.completed ? "Wait, I'm Not Done!":"I'm Done!"%>
    </button>
  </div>
</div>
