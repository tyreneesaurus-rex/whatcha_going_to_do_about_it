<!-- adding data-id attribute -->
<div class="panel panel-default" data-id="<%= task.id %>">
  <div class="panel-heading">
    <h3 class="panel-title"><%= task.name %></h3>
  </div>
  <div class="panel-body">
    <p><%= truncate task.description, length: 50 %></p>
    <% if task.due_on %>
      <p id="complete-by">Complete by: <%= task.due_on %></p>
    <% end %>
    <p>Status: <%= task.completed ? "Complete":"Incomplete"%></p>

    <% task.completed ? (btn_text = "Wait, I'm Not Done!"):(btn_text = "I'm Done!")%>
  
    <%= link_to btn_text, task_path(id: task.id, task: { completed: !task.completed}), method: :patch, class: "btn btn-primary", id: "done-button" %>

  </div>
</div>
